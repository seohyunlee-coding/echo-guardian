<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- 헤더 영역: 홈과 완전히 동일하게, 불필요한 아이콘(X, 카메라) 제거 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/accent_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_subtitle"
                android:textSize="11sp"
                android:textColor="@color/dark_gray" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, 1234님"
            android:textSize="13sp"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:minWidth="50dp"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/button_dark"
            app:cornerRadius="6dp" />
    </LinearLayout>

    <!-- 메인 콘텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 포스트 제목 -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무단 투기 감지"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- 작성자 및 날짜 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자: 1234"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/detailDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025년 12월 15일 12:07"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <!-- 포스트 이미지 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/accent_green">

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/detail_image_desc" />

            </com.google.android.material.card.MaterialCardView>

            <!-- 본문 레이블 -->
            <TextView
                android:id="@+id/labelBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="본문"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- 포스트 본문 (있는 경우) -->
            <TextView
                android:id="@+id/detailBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <!-- 하단 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center">

        <!-- 수정 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditPost"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="수정"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/accent_green"
            app:cornerRadius="6dp" />

        <!-- 삭제 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeletePost"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="삭제"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="6dp" />

    </LinearLayout>

</LinearLayout>
